Switches: -------------------------------

=== Mult Sw 1 =========================
ena
conf t
hostname MultiSwitch1

// Conexion a Router ElCabrito
int g1/0/22
no sw
ip add 148.60.64.69 255.255.255.240
no shut

// Conexion a MS2
int g1/0/23
no sw
ip add 148.60.64.89 255.255.255.252
no shut

// Conexion a MS4
int g1/0/24
no sw
ip add 148.60.64.97 255.255.255.252
no shut

//Vlan 100 - Servicios
vlan 100
name Servicios

int range g1/0/10-12
spanning-tree portfast
sw mode acc
sw acc vlan 100
exit

int vlan 100
ip add 148.60.64.49 255.255.255.240

//vlan 99 - Compras
vlan 99
name Compras

int range g1/0/7-9
spanning-tree portfast
sw mode acc
sw acc vlan 99
exit

int vlan 99
ip add 148.60.64.33	255.255.255.240

